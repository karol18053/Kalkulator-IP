		lblMaskaSieci.setBounds(10, 136, 77, 35);
		contentPane.add(lblMaskaSieci);
		
		JLabel lblLiczbaPodsieci = new JLabel("Liczba podsieci:");
		lblLiczbaPodsieci.setBounds(10, 166, 102, 28);
