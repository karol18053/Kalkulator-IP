		setContentPane(contentPane);
		contentPane.setComponentOrientation(null);
		contentPane.setLayout(null);
		
		JLabel lblKalkulatorIp = new JLabel("Kalkulator IP");
		lblKalkulatorIp.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblKalkulatorIp.setBounds(10, 11, 136, 49);
		contentPane.add(lblKalkulatorIp);
		
