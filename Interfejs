	private class PrzyciskListenerOblicz implements ActionListener {

		public void actionPerformed(ActionEvent event) {
			
			pobierzDane(textField_Adres_Sieci, textField_Maska_Sieci, textField_Liczba_Podsieci, textField_Liczba_Hostow, textField_Procent_Wolnych);
			
		}
	}
	
	public static void pobierzDane(JTextField textField_Adres_Sieci, JTextField textField_Maska_Sieci, JTextField textField_Liczba_Podsieci, 
			JTextField textField_Liczba_Hostow, JTextField textField_Procent_Wolnych){
		
		System.out.println("witaj");
		
		//int adres_sieci = Integer.parseInt(textField_Adres_Sieci2.getText());
		String adres_sieci = textField_Adres_Sieci.getText();
		String maska_sieci = textField_Maska_Sieci.getText();
		String liczba_podsieci = textField_Liczba_Podsieci.getText();
		String liczba_hostow = textField_Liczba_Hostow.getText();
		String procent_wolnych_hostow = textField_Procent_Wolnych.getText();
		
		
		System.out.println(adres_sieci);
		System.out.println(maska_sieci);
		System.out.println(liczba_podsieci);
		System.out.println(liczba_hostow);
		System.out.println(procent_wolnych_hostow);
		
	}
