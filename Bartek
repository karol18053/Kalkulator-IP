		int a = Integer.parseInt(textField.getText());
		
		int procent = Integer.parseInt(textField_5.getText()); 
		int liczbaHostow = (a * (100+procent))/100;
		for(int i = 24; i<31;i++) {
			int maska = (int) maskaPodsieci.get(i);
			if(liczbaHostow >= maska ) {
				liczbaHostow = liczbaHostow - maska;
				System.out.println("Maska: /" + (i-1) + " Liczba host√≥w: " + maska);
				i--;
			}
		}
			
		
