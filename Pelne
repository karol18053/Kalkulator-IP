package kalkulator_ip;

import java.util.ArrayList;
import java.util.List;

public class Pelne {

	public List<Integer> siec = new ArrayList<Integer>(4);

	public int hosty;

	public void Licz_hosty(List<Integer> siec) {

		ArrayList<Integer> maskaPodsieci = new ArrayList<Integer>();
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(0);
		maskaPodsieci.add(2046);
		maskaPodsieci.add(1021);
		maskaPodsieci.add(509);
		maskaPodsieci.add(253);
		maskaPodsieci.add(125);
		maskaPodsieci.add(61);
		maskaPodsieci.add(29);
		maskaPodsieci.add(13);
		maskaPodsieci.add(5);
		maskaPodsieci.add(1);

		int liczbaHostow = hosty;
		int adres_sieci = siec.get(3);
		for (int i = 21; i < 31; i++) {
			
			int maska = (int) maskaPodsieci.get(i);
			if (liczbaHostow >= maska) {
				liczbaHostow = liczbaHostow - maska;
				System.out.println("Adres sieci: " + (adres_sieci)+ " Maska: /" + (i - 1) +  " Adres rozgłoszeniowy: "
				+ (adres_sieci + maska + 2) + " Pierwszy: " + (adres_sieci + 1) + " Ostatni: " + (adres_sieci + maska + 1) 
				+ " Licba hostów: " + maska);
				adres_sieci += adres_sieci + maska + 3;
				i--;
			}
		}

	}

}
